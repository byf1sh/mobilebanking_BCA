<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/antarrekening_mbca"
    tools:context=".AntarRekeningActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/SpaceHeader"
        android:layout_width="match_parent"
        android:layout_height="78px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/black">
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="193px"
        app:layout_constraintTop_toBottomOf="@id/SpaceHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kolomIsian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/header">

        <EditText
            android:id="@+id/rek1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rekening 1"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/rek2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rekening 2"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/rek1"
            android:layout_marginTop="24dp"/>
        <EditText
            android:id="@+id/rek3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rekening 3"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/rek2"
            android:layout_marginTop="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>